<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <config />

    <packageRestore>
        <!-- Allow NuGet to download missing packages -->
        <add key="enabled" value="True" />

        <!-- Automatically check for missing packages during build in Visual Studio -->
        <add key="automatic" value="True" />
    </packageRestore>

    <packageSources>
        <clear />
        <add key="nexus" value="%NEXUS_REPO_URL%/repository/nuget-hosted" />
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    </packageSources>

    <packageSourceCredentials>
        <nexus>
            <add key="Username" value="%NEXUS_REPO_U%" />
            <add key="ClearTextPassword" value="%NEXUS_REPO_P%" />
        </nexus>
    </packageSourceCredentials>

    <apikeys>
        <add key="%NEXUS_REPO_URL%/repository/nuget-hosted" value="%NEXUS_REPO_API_KEY%" />
    </apikeys>

</configuration>
